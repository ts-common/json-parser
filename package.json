{
  "name": "@ts-common/json-parser",
  "version": "0.8.0",
  "description": "JSON Parser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "tsc": "tsc",
    "test": "tsc && jest --verbose",
    "prepack": "npm install && tsc",
    "scripts": {
      "tslint-check": "tslint-config-prettier-check ./tslint.json"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.js.map",
    "dist/index.d.ts.map",
    "src/index.ts"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/dist/test/*Tests.js"
    ],
    "reporters": [
      "jest-junit",
      "default"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "/dist/test/"
    ],
    "coverageReporters": [
      "cobertura",
      "text",
      "html"
    ]
  },
  "jest-junit": {
    "outputDirectory": ".",
    "outputName": "test-results.xml"
  },
  "keywords": [
    "json",
    "parser"
  ],
  "author": "Sergey Shandar",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ts-common/json-parser/issues"
  },
  "homepage": "https://github.com/ts-common/json-parser#readme",
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^10.12.18",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "prettier": "1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.5.1",
    "ts-jest": "^24.3.0"
  },
  "dependencies": {
    "@ts-common/add-position": "0.0.2",
    "@ts-common/iterator": "^0.3.5",
    "@ts-common/json": "^0.3.1",
    "@ts-common/source-map": "^0.5.0",
    "@ts-common/string-map": "^0.3.0",
    "tslib": "^1.9.3"
  }
}
